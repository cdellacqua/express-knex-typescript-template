{
	"name": "express-knex-typescript-template",
	"version": "1.0.0",
	"description": "",
	"main": "build/index.js",
	"scripts": {
		"test": "npm run test:prepare && cross-env NODE_ENV=test mocha 'tests/**/*.ts'",
		"test:prepare": "docker-compose up -d && cross-env NODE_ENV=test knex migrate:rollback --all && cross-env NODE_ENV=test npm run migrate-seed",
		"build": "rimraf build && tsc",
		"prestart": "npm run migrate-nobuild",
		"start": "node --unhandled-rejections=strict --enable-source-maps .",
		"dev": "nodemon .",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"migrate": "npm run build && knex migrate:latest",
		"migrate-nobuild": "knex migrate:latest",
		"rollback:all": "npm run build && knex migrate:rollback --all",
		"seed": "npm run build && knex seed:run",
		"migrate-seed": "npm run build && knex migrate:latest && knex seed:run",
		"setup": "node setup.js"
	},
	"keywords": [],
	"private": true,
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/chai": "^4.2.14",
		"@types/chai-spies": "^1.0.3",
		"@types/cors": "^2.8.8",
		"@types/express": "^4.17.9",
		"@types/jsonwebtoken": "^8.5.0",
		"@types/mocha": "^8.0.4",
		"@types/morgan": "^1.9.2",
		"@types/node": "^14.14.7",
		"@types/pg": "^7.14.6",
		"@types/pug": "^2.0.4",
		"@types/superagent": "^4.1.10",
		"@typescript-eslint/eslint-plugin": "^3.9.1",
		"@typescript-eslint/parser": "^3.9.1",
		"chai": "^4.2.0",
		"chai-http": "^4.3.0",
		"chai-spies": "^1.0.0",
		"cross-env": "^7.0.2",
		"eslint": "^7.13.0",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-plugin-import": "^2.22.0",
		"mocha": "^8.2.1",
		"nodemon": "^2.0.6",
		"rimraf": "^3.0.2",
		"ts-node": "^9.0.0",
		"typescript": "^3.9.7"
	},
	"dependencies": {
		"@cdellacqua/express-async-wrapper": "^1.0.2",
		"@cdellacqua/knex-transact": "^2.0.0",
		"@cdellacqua/serializable-error": "^1.1.0",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-validator": "^6.6.1",
		"jsonwebtoken": "^8.5.1",
		"knex": "^0.21.9",
		"morgan": "^1.10.0",
		"pg": "^8.5.0",
		"pug": "^3.0.0",
		"winston": "^3.3.3"
	}
}
